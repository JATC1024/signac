CXX_STD = CXX11

USER_INCLUDE = ${R_PACKAGE_DIR}/include
USER_LIB_DIR = ${R_PACKAGE_DIR}/lib${R_ARCH}

HDF5_INCLUDE=${R_HOME}/library/Rhdf5lib/include
HDF5_CXX_INCLUDE=@HDF5_CXX_INCLUDE@
HDF5_LIB = ${R_HOME}/library/Rhdf5lib/lib

PKG_CFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -I${HDF5_INCLUDE} -I${ZLIB_HOME}/include -L${ZLIB_HOME}/lib
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) ${HDF5_LIB}/libhdf5.a ${HDF5_LIB}/libsz.a -lz
